@model EmployeeManagement.Models.Employee

@{
    ViewBag.Title = "Delete Employee";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Delete Confirmation</h3>
        </div>

        <div class="card-body p-4">
            <h4 class="text-danger fw-bold">Are you sure you want to delete this employee?</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-4 fw-bold">Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4 fw-bold">Email</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4 fw-bold">Position</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Position)</dd>

                <dt class="col-sm-4 fw-bold">Date of Joining</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfJoining)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mt-4 text-end">
                    <input type="submit" value="Delete" class="btn btn-danger me-2" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
